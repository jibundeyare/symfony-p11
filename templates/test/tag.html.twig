{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1>{{ title }}</h1>

<h2>Tag individuels</h2>

<h3>{{ htmlTag.name }} (id {{ htmlTag.id }})</h3>
<p>
    {{ htmlTag.description }}
</p>

<h3>{{ cssTag.name }} (id {{ cssTag.id }})</h3>
<p>
    {{ cssTag.description }}
</p>

<h2>Liste de tous les tags</h2>

{% for tag in tags %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

<h2>Liste des tags sans description</h2>

{% for tag in nullDescriptionTags %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

<h2>Liste des tags avec description</h2>

{% for tag in notNullDescriptionTags %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

<h2>Liste des tags avec mot-cl√©</h2>

{% for tag in keywordTags1 %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

{% for tag in keywordTags2 %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

<h2>Liste des tags d'une school year</h2>

{% for tag in schoolYearTags %}
    <h3>{{ tag.name }} (id {{ tag.id }})</h3>
    <p>
        {{ tag.description }}
    </p>
{% endfor %}

<h2>Liste des students du tag HTML</h2>

<ul>
{% for student in htmlTag.students %}
    <li>{{ student.firstName }} {{ student.lastName }} (id {{ student.id }})</li>
{% endfor %}
</ul>

{% endblock %}
