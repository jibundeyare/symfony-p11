{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <a href="{{ path('app_admin_user_new_admin') }}">Create new admin</a>
    <a href="{{ path('app_admin_user_new_student') }}">Create new student</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Extra</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {# {{ role }}{% if not loop.last %},{% endif %} #}
                        {{ role }}{{ loop.last ? '':',' }}
                    {% endfor %}
                </td>
                <td>
                    {% if 'ROLE_ADMIN' not in user.roles %}
                        {# le user n'est pas admin, c'est un student #}
                        {{ user.student.firstName }} {{ user.student.lastName }}
                    {% endif %}
                </td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                    <a href="{{ path('app_admin_user_password', {'id': user.id}) }}">password</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
